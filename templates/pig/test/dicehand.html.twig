{% extends "base_gris.html.twig" %}
{% block main %}
<header class="headerMe">
    <h2>Roll dice hand</h2>
</header>

<p>You rolled {{ num_dices }} dices. Here is the value of the dices.</p>

<ul class="dice">
{% for roll in diceRoll %}
    <li>{{ roll }}</li>
{% endfor %}
</ul>

<p>Try to roll 
    <a href="{{ path('test_dicehand', {number: 5}) }}">5</a>
    or 
    <a href="{{ path('test_dicehand', {number: 10}) }}">10</a>
    dices.
</p>
{% endblock %}
