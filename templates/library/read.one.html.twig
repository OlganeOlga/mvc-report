{% extends 'base.html.twig' %}

{% block title %}Hello LibraryController!{% endblock %}

{% block body %}
<main class="library">
    <fig class="book">
        {% if cover is not empty %}
            <img src="{{ cover }}" alt="book cover">
        {% else %}
            <p>Ingen bild tillagd för book med id {{ id }}</p>
        {% endif %}
    </fig>

    {% if title is not empty %}
        <h4 class="bookTitle">{{ title }}</h4>
    {% else %}
        <p>Ingen title tillagd för book med id {{ id }}</p>
    {% endif %}
    
    {% if isbn is not empty %}
        <p class="isbn">{{ isbn }}</p>
    {% else %}
        <p>Ingen isbn tillagd för book med id {{ id }}</p>
    {% endif %}
    
    {% if author is not empty %}
        <p class="author">{{ author }}</p>
    {% else %}
        <p>Ingen author tillagd för book med id {{ id }}</p>
    {% endif %}
    
        
</main>
{% endblock %}